<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#004d40"
        android:gravity="center"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Category"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/et_category_title_new_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Category Title" />

        <LinearLayout
            android:background="#d772c387"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:id="@+id/layout_audio_new_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageButton
                android:scaleType="fitXY"
                android:src="@drawable/ic_btn_paly"
                android:background="@android:color/transparent"
                android:id="@+id/ib_layout_audio_new_category"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/tv_layout_audio_title_new_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="Add Audio" />
        </LinearLayout>

        <ImageView
            android:padding="5dp"
            android:src="@drawable/ic_add_image"
            android:id="@+id/iv_category_image_new_category"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerInside" />

        <Button
            android:id="@+id/btn_add_new_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />

        <Button
            android:id="@+id/btn_cancel_new_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel" />

    </LinearLayout>
</LinearLayout>